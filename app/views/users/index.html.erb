<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th><!--Fname--></th>
      <th><!--Lname--></th>
      <th>Username</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><% user.fname %></td>
        <td><% user.lname %></td>
        <td><%= user.username %></td>
        <td><% user.password %></td>
<!--        <td><%= link_to 'Show', user %></td> -->
        <td><%= link_to 'Show', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

